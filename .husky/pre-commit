    #!/bin/sh
    . "$(dirname "$0")/_/husky.sh"

    # Get staged files (Added, Copied, Modified, Renamed)
    FILES=$(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')

    # Filter only relevant files (e.g., JavaScript, TypeScript, JSX, TSX)
    FORMAT_FILES=$(echo "$FILES" | grep -E '\.(js|jsx|ts|tsx)$')

    if [ -z "$FORMAT_FILES" ]; then
      echo "âœ… No files to format."
      exit 0
    fi

    echo "ðŸ§¼ Running Prettier..."
    npx prettier $FORMAT_FILES --write --ignore-unknown

    # Add the formatted files back to the staging area
    echo "$FORMAT_FILES" | xargs git add